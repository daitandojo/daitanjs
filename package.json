{
  "name": "daitanjs-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for all @daitanjs scoped libraries",
  "type": "module",
  "workspaces": [
    "src/*"
  ],
"scripts": {
    "build": "node esbuild.config.js",
    "build-watch": "chokidar 'src/*/src/**/*.js' --initial --verbose -c 'npm run build'",
    "clean": "rimraf src/*/dist",
    "test": "jest",
    "rebuild": "npm run clean && npm install && npm run build"
  },
  "author": "Buck Miller",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "babel-jest": "^29.7.0",
    "chokidar-cli": "^3.0.0",
    "esbuild": "^0.23.0",
    "glob": "^10.4.5",
    "jest": "^29.7.0",
    "rimraf": "^5.0.7"
  }
}